@model IEnumerable<SisConv.Application.ViewModels.DocumentacaoViewModel>

@{
    Layout = "~/Views/Shared/Processos/Configuracoes/_LayoutProcessosConfiguracoes.cshtml";
    ViewBag.Title = "Documentação dos Canditatos";
}

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><b>@ViewBag.dadosProcesso.Nome</b></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" style="margin-bottom:-30px !important">
                <div class="panel-heading">
                    <b>@ViewBag.Title</b>
                </div>
            </div>
            <div class="panel-body">
                <div class="col-lg-12">
                    <br /><br />
                    @Html.ActionLink("Inserir novo documento.", "Create", new { Id = ViewBag.ProcessoId })
                    
                </div>
                <table class="table">                   
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DataCriacao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Path)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Ativo)
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.HiddenFor(modelItem => item.ProcessoId, new { Value = ViewBag.ProcessoId })
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataCriacao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Path)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Ativo)
                            </td>
                            <td>
                                @*@Html.ActionLink("Editar", "Edit", new { id = item.DocumentoId }) |
                                @Html.ActionLink("Detalhes", "Details", new { id = item.DocumentoId }) |*@
                                @Html.ActionLink("Delete", "Delete", new { id = item.DocumentoId })
                            </td>
                        </tr>
                    }
                    <tr>
                        <td colspan="6">
                            <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>

                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>