@model IEnumerable<SistemaDeConvocacoes.Application.ViewModels.DocumentacaoViewModel>

@{
    Layout = "~/Views/Shared/Processos/Configuracoes/_LayoutProcessosConfiguracoes.cshtml";
    ViewBag.Title = "Documentação dos Canditatos";
}

<div class="col-lg-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="col-lg-12">
                                @Html.ActionLink("Inserir novo documento.", "Create", new { Id = ViewBag.ProcessoId })

                            </div>
                            <table class="table"   aria-describedby="mydesc">
                                <tr>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Descricao)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.DataCriacao)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Path)
                                    </th>
                                    <th scope="col">
                                        @Html.DisplayNameFor(model => model.Ativo)
                                    </th>
                                    <th scope="col">

                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.HiddenFor(modelItem => item.ProcessoId, new { Value = ViewBag.ProcessoId })
                                            @Html.DisplayFor(modelItem => item.Descricao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DataCriacao)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Path)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ativo)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "Delete", new { id = item.DocumentoId })
                                        </td>
                                    </tr>
                                }
                                <tr>
                                    <td colspan="6">
                                        <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>

                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
