@model SistemaDeConvocacoes.Application.ViewModels.DocumentacaoViewModel

@{
    Layout = "~/Views/Shared/Processos/Configuracoes/_LayoutProcessosConfiguracoes.cshtml";
    ViewBag.Title = "Novo Documento";
}

<div class="col-lg-12">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="card-body">
                        <div class="table-responsive">
                            @using (Html.BeginForm("Create", "Documentacao", FormMethod.Post, new { id = "form", enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Descricao, new { @class = "control-label col-md-4" })
                                        <div class="col-md-10">
                                            @*@Html.HiddenFor(model => model.ProcessoId, new { Value = ViewBag.ProcessoId, htmlAttributes = new { @class = "form-control" } })
                                            @Html.HiddenFor(model => model.DataCriacao, new { Value = DateTime.Now.ToString("dd/MM/yyyy"), htmlAttributes = new { @class = "form-control" } })
                                            @Html.HiddenFor(model => model.Ativo, new { Value = true })*@


                                            <input type="hidden" name="ProcessoId" id="ProcessoId" class="form-control" style="width: 200px" value="@ViewBag.ProcessoId" />
                                            <input type="hidden" name="DataCriacao" id="DataCriacao" class="form-control" style="width: 200px" value="@DateTime.Now.ToString("dd/MM/yyyy")" />
                                            <input type="hidden" name="Ativo" id="Ativo" class="form-control" style="width: 200px" value="true" />

                                            @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control", @style = "width:400px" } })
                                            @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Path, new { @class = "control-label col-md-2" })
                                        <div class="col-md-10">
                                            <input type="file" name="Path" id="Path" class="form-control-file" style="width: 200px" />
                                            @Html.ValidationMessageFor(model => model.Path, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Salvar" class="btn btn-success" />
                                            <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
