@model SistemaDeConvocacoes.Application.ViewModels.TipoDocumentoViewModel

@{
    Layout = "~/Views/Shared/Processos/Configuracoes/_LayoutProcessosConfiguracoes.cshtml";
}
<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><b>@ViewBag.dadosProcesso.Nome</b></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default" style="margin-bottom:-30px !important">
                <div class="panel-heading">
                    <b>Você tem certeza que deseja excluir esse item?</b>
                </div>
            </div>
            <div class="panel-body">
                <div>

                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TipoDocumentos)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TipoDocumentos)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Ativo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Ativo)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                        <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>