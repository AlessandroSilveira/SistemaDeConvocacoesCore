@model SistemaDeConvocacoes.Domain.Models.ApplicationUser

@{
    //Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
    ViewBag.Title = "Deletar Usuário.";
}


<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header"><b>@ViewBag.Title</b></h4>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                <h4>Você tem certeza que deseja excluir este usuário?</h4>
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.UserName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.UserName)
                        </dd>
                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-danger" /> 
                        <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>

                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
