@model IEnumerable<SistemaDeConvocacoes.Domain.Models.ApplicationUser>

@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
    ViewBag.Title = "Usuários do Sistema de Convocações";
}

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">

        </div>
    </div>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="card-body">
                        <div class="table-responsive">
                            <p>
                                @Html.ActionLink("Criar Novo Usuário", "Create")
                            </p>
                            <table class="table">
                                <tr>
                                    <th>
                                        Usuário
                                    </th>
                                    <th>
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.UserName)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
                                            @Html.ActionLink("Detalhes", "Details", new { id = item.Id }) |
                                            @Html.ActionLink("Excluir", "Delete", new { id = item.Id })
                                        </td>
                                    </tr>
                                }
                            </table>
                            <div>
                                <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</div>