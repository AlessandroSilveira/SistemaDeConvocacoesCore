@model SistemaDeConvocacoes.Application.ViewModels.EditUserViewModel 

@{
    Layout = "~/Views/Shared/Admin/_LayoutAdmin.cshtml";
    ViewBag.Title = "Editar Usuário";
}


<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><b>@ViewBag.Title</b></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                       
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" ,@style="width:50%"})
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                        <div class="form-group">
                            @*@Html.Label("Roles", new { @class = "control-label col-md-2" })*@
                            <span class=" col-md-10">
                                Regras de Acesso:
                                @foreach (var item in Model.RolesList)
                                {
                                    <input type="checkbox" name="SelectedRole" value="@item.Value" checked="@item.Selected" class="checkbox-inline" />
                                    @Html.Label(item.Value,"", new { @class = "control-label" })
                                }
                            </span>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Salvar" class="btn btn-success" />
                                <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>
                            </div>
                        </div>
                    </div>
                }
                @section Scripts {
                    @RenderSection("~/bundles/jqueryval")
                }
            </div>
        </div>
    </div>
</div>