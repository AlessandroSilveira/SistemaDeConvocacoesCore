@model SistemaDeConvocacoes.Application.ViewModels.DocumentoCandidatoViewModel

@{
    Layout = "~/Views/Shared/Convocacao/DocumentacaoConvocado/_LayoutConvocacaoDocumentacaoConvocado.cshtml";
    ViewBag.Title = "Novo Documento";
}

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"><strong>@ViewBag.Title</strong></h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel-body">
                <div class="table-responsive">
                    @using (Html.BeginForm("Create", "DocumentoCandidato", FormMethod.Post, new { @id = "form", @enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.TipoDocumento, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-12">
                                    <select name="TipoDocumento" class="form-control"  , style="width:50%">
                                        <option value="">Selecione</option>
                                        @foreach (var itens in ViewBag.ListaTipoDocumento)
                                        {
                                            <option value="@itens.TipoDocumentos">@itens.TipoDocumentos</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-12">
                                    @Html.LabelFor(model => model.Documento, htmlAttributes: new { @class = "control-label" })
                                </div>
                                <div class="col-md-12">
                                    <input type="file" name="Documento" id="Documento" class="form-control-file" value="" />
                                    @Html.HiddenFor(model => model.ProcessoId, new { htmlAttributes = new { @class = "form-control" }, Value = ViewBag.ProcessoId })
                                    @Html.HiddenFor(model => model.ConvocadoId, new { htmlAttributes = new { @class = "form-control" }, Value = ViewBag.ConvocacaoId })
                                    @Html.HiddenFor(model => model.Ativo, new { htmlAttributes = new { @class = "form-control" }, Value = true })
                                    @Html.ValidationMessageFor(model => model.Documento, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-1">
                                    <button type="submit" value="Salvar" class="btn btn-success">Salvar</button>
                                    <button  value="Voltar" class="btn btn-default" onclick="window.history.back();">Voltar</button>
                                </div>
                            </div>
                        </div>
                    }

                    
                </div>
            </div>
        </div>
    </div>
</div>
