@model IEnumerable<SistemaDeConvocacoes.Application.ViewModels.ProcessoViewModel>
@{
    Layout = "~/Views/Shared/Processos/LayoutPainelIndex.cshtml";
    ViewBag.Title = "Convocações";
}
<div class="col-lg-12">   
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewBag.Title</h6>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel-body">
                    <div class="card-body">
                        <div class="table-responsive">
                            <div class="table-responsive">
                                <table class="table">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Nome)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.DataCriacao)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Ativo)
                                        </th>
                                        <th></th>
                                        <th></th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.ActionLink(item.Nome, "Painel", "Processos", new { id = item.ProcessoId }, null)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.DataCriacao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Ativo)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Configurações", "Configuracoes", new { id = item.ProcessoId }, null)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Relatórios", "Index", "Relatorio", new { id = item.ProcessoId }, null)
                                            </td>
                                        </tr>
                                    }
                                    <tr>
                                        <td colspan="5">
                                            <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>