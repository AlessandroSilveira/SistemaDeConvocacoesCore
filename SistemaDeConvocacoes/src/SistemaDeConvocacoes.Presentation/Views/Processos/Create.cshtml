@using Microsoft.AspNet.Identity
@model SistemaDeConvocacoes.Application.ViewModels.ProcessoViewModel

@{
    Layout = "~/Views/Shared/Processos/LayoutPainelIndex.cshtml";
    ViewBag.Title = "Nova Convocação";
}

<div class="col-lg-12">
    <div class="row">
        <div class="col-lg-12">
            <h4 class="page-header"><b>@ViewBag.Title</b></h4>
        </div>      
    </div>
    <div class="panel-body">
        <div class="table-responsive">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    <div class="form-group">
                        @Html.LabelFor(model => model.Nome, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", maxlegth = 100, @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TextoDeAceitacaoDaConvocacao, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.TextoDeAceitacaoDaConvocacao, 5, 55, new { htmlAttributes = new { @class = "form-control", maxlegth = 100 } })
                            @Html.ValidationMessageFor(model => model.TextoDeAceitacaoDaConvocacao, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TextoInicialTelaConvocado, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.TextoInicialTelaConvocado, 5, 55, new { htmlAttributes = new { @class = "form-control", maxlegth = 100 } })
                            @Html.ValidationMessageFor(model => model.TextoInicialTelaConvocado, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.TextoParaDesistentes, new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.TextoParaDesistentes, 5, 55, new { htmlAttributes = new { @class = "form-control", maxlegth = 100 } })
                            @Html.ValidationMessageFor(model => model.TextoParaDesistentes, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.HiddenFor(model => model.Ativo, new { Value = true })
                        @Html.HiddenFor(model => model.DataCriacao, new { Value = DateTime.Now.ToString("dd/MM/yyyy") })
                        @Html.HiddenFor(model => model.ClienteId, new { Value = User.Identity.GetUserId() })
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Salvar" class="btn btn-success" />
                            <button type="button" class="btn btn-secondary" title="" data-placement="left" onclick="history.back();">Voltar</button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
